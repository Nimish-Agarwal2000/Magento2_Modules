<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="dotsquares" translate="label" sortOrder="1000">
            <label>Dotsquares</label>
        </tab>
        <section id="brands" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="0">
            <class>separator-top</class>
            <label>Brand</label>
            <tab>dotsquares</tab>
            <resource>Dotsquares_Productsinquiry::products_config</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0"
                showInStore="1">
                <label>General </label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1"
                    showInWebsite="0" showInStore="1">
                    <label>Brand Enable</label>

                    <source_model>Dotsquares\Brands\Model\Config\Source\Yesno</source_model>
                
                </field>
               
                
                
           


                
                <field id="brands_item_label" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="0"
                    showInStore="1">
                    <label>Brands Item Label</label>
                   <comment>Used in top menu and account links.</comment>
                </field>
                
                
            </group>




                <group id="product_page_brand_settings" translate="label" type="text" sortOrder="7" showInDefault="1"
                showInWebsite="0" showInStore="1">
                <label>Product View Page Brand Settings</label>
                  <field id="show_logo_on_product_page" translate="label" type="select" sortOrder="1" showInDefault="1"
                    showInWebsite="0" showInStore="1">
                    <label>Display Brand Logo on Product Page</label>
                    <source_model>Dotsquares\Brands\Model\Config\Source\Yesno</source_model>
                </field>
                  <field id="show_sortdescription_on_product_page" translate="label" type="select" sortOrder="2" showInDefault="1"
                    showInWebsite="0" showInStore="1">
                    <label>Display Short Description on Product Page</label>
                    <comment>Displays Brand short description together with the Brand logo on the product page</comment>
                    <source_model>Dotsquares\Brands\Model\Config\Source\Yesno</source_model>
                    
                </field>
                <field id="brand_logo_width" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="0"
                    showInStore="1">
                    <label>Brand Logo Width, px</label>
                   <comment>If the field is left empty, the default image size (30px) will be used.</comment>
               
                </field>
                <field id="brand_logo_height" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="0"
                    showInStore="1">
                    <label>Brand Logo Height, px</label>
                   <comment>If the field is left empty, the default image size (30px) will be used.</comment>
                </field>
                </group>

                <group id="product_listing_brand_settings" translate="label" type="text" sortOrder="8" showInDefault="1"
                showInWebsite="0" showInStore="1">
                <label>Product Listing Brand Settingss</label>
                 <field id="show_logo_on_product_listing" translate="label" type="select" sortOrder="2" showInDefault="1"
                    showInWebsite="0" showInStore="1">
                    <label>Display Brand Logo on Product Listing</label>
                    <comment>Note. Please enable "Used in Product Listing" setting for brand attribute.</comment>
                    <source_model>Dotsquares\Brands\Model\Config\Source\Yesno</source_model>
                    
                </field>
                   <field id="show_sortdescription_on_product_listing_page" translate="label" type="select" sortOrder="2" showInDefault="1"
                    showInWebsite="0" showInStore="1">
                    <label>Display Short Description on Product Listing Page</label>
                    <comment>Displays Brand short description together with the Brand logo on the product Listing page</comment>
                    <source_model>Dotsquares\Brands\Model\Config\Source\Yesno</source_model>
                    
                </field>

                <field id="brand_logo_width_on_product_listing" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="0"
                    showInStore="1">
                    <label>Brand Logo Width</label>
                   <comment>Please specify the value in pixels (e.g. 10) or percent (e.g. 10%). If the field is left empty, the default image size (30px) will be used.</comment>
               
                </field>
                <field id="brand_logo_height_on_product_listing" translate="label" type="text" sortOrder="8" showInDefault="1" showInWebsite="0"
                    showInStore="1">
                    <label>Brand Logo Height</label>
                   <comment>Please specify the value in pixels (e.g. 10) or percent (e.g. 10%). If the field is left empty, the default image size (30px) will be used.</comment>
                </field>
               </group>
        </section>
    </system>
</config>